
@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
}
@{ string emailFoundState = (string)TempData["EmailFoundState"]; }
<div class="auth-box card">
    <div class="card-block">
        <div class="row m-b-20">
            <div class="col-md-12">
                <h3 class="text-center">Parola Sıfırlama</h3>
            </div>
        </div>
        <div class="form-group form-primary">
            @if (emailFoundState == "true")
            {
                <h5 class="text-center">EMail Kutunuzu Kontrol Ediniz</h5>
            }
            else
            {
                <h5 class="text-center">Girdiğiniz EMail'in kayıtlı olduğu bir kullanıcı bulunamadı</h5>
            }
            <span class="form-bar"></span>
        </div>
        <hr />
    </div>
</div>


@{
    ViewData["Title"] = "Kategori Oluştur Yada Güncelle";
}
@model CategoryCreateOrUpdateDto

<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Kategori Ekleme Sayfası</h5>
        </div>
        <div class="card-block">
            <form asp-action="CreateOrUpdateCategory" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Kategori Ad</label>
                    <div class="col-sm-10">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Kategori Adını giriniz">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Kategori Açıklaması</label>
                    <div class="col-sm-10">
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Kategori Açıklamasını giriniz">
                    </div>
                </div>
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </form>
        </div>
    </div>

</div>

@section Scritps
{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

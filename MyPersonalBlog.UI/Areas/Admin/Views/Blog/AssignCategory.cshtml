
@{
    ViewData["Title"] = "Kategori Ata";
}

@model List<AssignCategoryModel>

<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Kategori Atama Sayfası</h5>
        </div>
        <div class="card-block">
            <form asp-action="AssignCategory" method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="checkbox-fade fade-in-primary ml-4 d-">
                        <input type="hidden" asp-for="@Model[i].CategoryName"/>
                        <input type="hidden" asp-for="@Model[i].CategoryId"/>
                        <input asp-for="@Model[i].Exists" class="form-check-input" style="height: 15px; width: 15px;border-radius: 5px" type="checkbox"/>
                        <label asp-for="@Model[i].Exists" class="form-check-label">@Model[i].CategoryName</label>
                    </div>
                   <hr/>
                }
                <button type="submit" class="btn btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </form>
        </div>
    </div>

</div>

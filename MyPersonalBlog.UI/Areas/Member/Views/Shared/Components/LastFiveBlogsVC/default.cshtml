
@model List<LastBlogListDto>
<div class="blog-post">
    <h3>
        Son Blog Yazılarım
    </h3>
    @if (Model.Count != 0)
    {
        @foreach (var blog in Model)
        {
            <div class="media">
                <a class="pull-left" asp-action="BlogDetail" asp-controller="Blog" asp-route-blogId="@blog.Id" asp-route-title="@Url.FriendlyUrl(blog.Title)">
                    <img style="height: 50px;width: 80px" class="" src="~/images/@blog.ImagePath" alt="@blog.Title">
                </a>
                <div class="media-body">
                    <a asp-action="BlogDetail" asp-controller="Blog" asp-route-blogId="@blog.Id" asp-route-title="@Url.FriendlyUrl(blog.Title)">
                        <h5 class="media-heading">@blog.PostedTime.ToShortDateString() </h5>
                        <p>
                            @blog.Title
                        </p>
                    </a>
                </div>
            </div>
            <hr/>
        }
    }
    else
    {
        <h5 class="media-heading"><a href="javascript:;">Blog Yok</a></h5>}

</div>
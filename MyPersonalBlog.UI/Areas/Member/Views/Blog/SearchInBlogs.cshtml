
@{
    ViewData["Title"] = "Arama Sonuçlarınız";
}
@model List<BlogListDto>

<div class="row">
    <div class="text-center feature-head">
        <h2> @ViewBag.SearchingValue Aramanız İçin Gelen Sonuçları Görüyorsunuz</h2>
    </div>
    @if (Model.Count != 0)
    {
        @for (int i = 0; i < Model.Count;)
        {
            <div class="row">
                <div class="col-lg-6">
                    <hr />
                    <div class=" text-center">
                        <img style="height: 150px; width: 250px" src="~/images/@Model[i].ImagePath" alt="@Model[i].Title">
                    </div>
                    <div class="person-info text-center">
                        <h4>
                            <a asp-controller="Blog" asp-action="BlogDetail" asp-route-blogId="@Model[i].Id" asp-route-title="@Url.FriendlyUrl(Model[i].Title)">@Model[i].Title</a>
                        </h4>
                        <p>@Model[i].ShortDescription</p>
                    </div>
                    @{ i++;}
                </div>
                @if (i != Model.Count)
                {
                    <div class="col-lg-6">
                        <hr />
                        <div class=" text-center">
                            <img style="height: 150px; width: 250px" src="~/images/@Model[i].ImagePath" alt="@Model[i].Title">
                        </div>
                        <div class="person-info text-center">
                            <h4>
                                <a asp-controller="Blog" asp-action="BlogDetail" asp-route-blogId="@Model[i].Id" asp-route-title="@Url.FriendlyUrl(Model[i].Title)">@Model[i].Title</a>
                            </h4>
                            <p>@Model[i].ShortDescription</p>
                        </div>
                        @{ i++;}
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="text-center feature-head">
            <hr />
            <p>Aramanızla Eşleşen Herhangi Bir Blog Yok</p>
        </div>
    }
</div>